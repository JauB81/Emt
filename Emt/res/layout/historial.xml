<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="@drawable/back">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" android:background="@drawable/back_titulo">
    
        <TextView 
            android:id="@+id/titulo_textview"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Historial" 
            android:gravity="center" 
            android:textColor="#2D2D2D" 
            android:textSize="20sp" 
            android:textStyle="bold"/>
    
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:gravity="center"
        android:orientation="vertical" android:padding="7sp">

        <ListView
            android:id="@+id/historial_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/historial_multar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Multar" />
        
        <Button
            android:id="@+id/historial_nomultar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Multar" />
    </LinearLayout>

</LinearLayout>